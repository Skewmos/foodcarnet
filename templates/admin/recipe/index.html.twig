{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1>Recipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idrecipe</th>
                <th>Name</th>
                <th>Description</th>
                <th>Timetocomplete</th>
                <th>Viewnumber</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.idrecipe }}</td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.description }}</td>
                <td>{{ recipe.timetocomplete ? recipe.timetocomplete|date('H:i:s') : '' }}</td>
                <td>{{ recipe.viewnumber }}</td>
                <td>{{ recipe.price }}</td>
                <td>
                    <a href="{{ path('recipe_show', {'idrecipe': recipe.idrecipe}) }}">show</a>
                    <a href="{{ path('recipe_edit', {'idrecipe': recipe.idrecipe}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recipe_new') }}">Create new</a>
{% endblock %}
