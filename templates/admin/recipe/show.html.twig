{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idrecipe</th>
                <td>{{ recipe.idrecipe }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Timetocomplete</th>
                <td>{{ recipe.timetocomplete ? recipe.timetocomplete|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Viewnumber</th>
                <td>{{ recipe.viewnumber }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ recipe.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recipe_index') }}">back to list</a>

    <a href="{{ path('recipe_edit', {'idrecipe': recipe.idrecipe}) }}">edit</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
