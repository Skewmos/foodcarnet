<form method="post" action="{{ path('recipe_delete', {'idrecipe': recipe.idrecipe}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.idrecipe) }}">
    <button class="btn">Delete</button>
</form>
