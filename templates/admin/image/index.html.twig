{% extends 'base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
    <h1>Image index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idimage</th>
                <th>Name</th>
                <th>Path</th>
                <th>Alt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.idimage }}</td>
                <td>{{ image.name }}</td>
                <td>{{ image.path }}</td>
                <td>{{ image.alt }}</td>
                <td>
                    <a href="{{ path('image_show', {'idimage': image.idimage}) }}">show</a>
                    <a href="{{ path('image_edit', {'idimage': image.idimage}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('image_new') }}">Create new</a>
{% endblock %}
