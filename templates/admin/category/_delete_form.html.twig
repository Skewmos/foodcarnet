<form method="post" action="{{ path('category_delete', {'idcategory': category.idcategory}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.idcategory) }}">
    <button class="btn">Delete</button>
</form>
