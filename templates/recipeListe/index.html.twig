{% extends 'base.html.twig' %}

{% block title %}FoodCarnet | Recettes{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                {% include 'recipeListe/_filter.html.twig'  with {form: form, minPrice: minPrice, maxPrice: maxPrice} only%}
            </div>
            <div class="col-md-9">
                <div class="d-flex justify-content-end mb-2">
                    {{ knp_pagination_sortable(recipes, 'Prix', 'r.price') }}
                </div>
                <div class="grid">
                    {% for recipe in  recipes %}
                        {% include 'recipeListe/_card.html.twig' with  {recipe: recipe} only %}
                     {% endfor %}
                </div>

                <div class="mt-4">
                    {{ knp_pagination_render(recipes) }}
                </div>
            </div>
        </div>

    </div>
{% endblock %}
